#!/bin/sh

mm ()
{
	make -B
	sudo make install
}

origin="$PWD"
cmd='mm'

while getopts q opt; do
	case $opt in
		q) cmd='qmake;mm';;
		\?) exit 1;;
	esac
done
shift $((OPTIND-1))

if [ -z "$1" ]; then
	eval "$cmd"
else
	for dir ; do
		cd "$dir" || exit 1
		eval "$cmd"
		cd "$origin" || exit 1
	done
fi
