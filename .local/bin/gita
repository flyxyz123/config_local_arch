#	l) cmd=cfgl ;;
#	c) cmd=cfgc ;;
#	*) exit 1 ;;
#esac
#"$cmd" add -u
#if [ -z "$1" ]; then
#	"$cmd" commit -m "patch"
#else
#	"$cmd" commit -m "$1"
#fi
#"$cmd" push

cmd='git'
mes='patch'

while getopts lcm: f; do
	case $f in
		l) cmd='cfgl';;
		c) cmd='cfgc';;
		m) mes="$OPTARG" ;;
		\?) exit 1;;
	esac
done

"$cmd" add -u
"$cmd" commit -m "$mes"
"$cmd" push
